<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="200" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <TextBox Name="inTextBox" IsReadOnly="True" Background="Bisque" FontSize="25" Height="310" VerticalAlignment="Top"></TextBox>
            <TextBox Name="outTextBox" Background="GreenYellow" Height="65" FontSize="20" Foreground="red" TextWrapping="Wrap" VerticalAlignment="Top"></TextBox>
            <Button x:Name="sendButton" Click="sendButton_Click">Send</Button>

        </StackPanel>


    </Grid>
</Window>
