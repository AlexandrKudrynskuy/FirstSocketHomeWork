<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="200" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>        
            <TextBox Name="inTextBox" IsReadOnly="True" Background="White" Foreground="Red" FontSize="25" Height="310" VerticalAlignment="Top"></TextBox>
            <TextBox Name="outTextBox" Background="Bisque" Height="65" Foreground="Green" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Top"></TextBox>
            <Button x:Name="sendButton" Click="sendButton_Click">Send</Button>

        </StackPanel>

    </Grid>
</Window>
